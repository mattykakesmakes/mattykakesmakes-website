# FEEDS – optional extended caching
# =====================================================
/sitemap.xml
  Cache-Control: public, max-age=3600, s-maxage=43200, stale-while-revalidate=86400

/index.xml
  Cache-Control: public, max-age=3600, s-maxage=43200, stale-while-revalidate=86400

# =====================================================
# FALLBACK – catch-all for other static non-HTML files
# =====================================================
/*.(json|xml|txt|csv|pdf|mp3|mp4|webm|wav|woff2|ttf|eot|zip|tar.gz|manifest.json)
