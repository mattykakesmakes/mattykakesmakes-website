  Cache-Control: public, max-age=31536000, immutable

# =====================================================
# HTML CONTENT – short browser cache, longer CDN cache
# =====================================================
/index.html
  Cache-Control: public, max-age=3600, s-maxage=43200, stale-while-revalidate=86400

/*.html
  Cache-Control: public, max-age=3600, s-maxage=43200, stale-while-revalidate=86400

